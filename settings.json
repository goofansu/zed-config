{
  "ui_font_size": 16,
  "ui_font_family": "Aporetic Serif",
  "buffer_font_size": 16,
  "buffer_font_family": "Aporetic Sans Mono",
  "agent_buffer_font_size": 16,

  "theme": {
    "mode": "system",
    "light": "Modus Operandi",
    "dark": "Modus Vivendi",
  },

  "terminal": {
    "font_family": "Aporetic Sans Mono",
    "shell": "system",
  },

  "agent": {
    "default_profile": "ask",
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5",
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-haiku-4.5",
    },
  },

  "agent_servers": {
    "claude": {
      "default_mode": "bypassPermissions",
    },
  },

  "features": {
    "edit_prediction_provider": "none",
  },

  "auto_install_extensions": {
    "dockerfile": true,
    "elixir": true,
    "haml": true,
    "html": true,
    "make": true,
    "modus-themes": true,
    "nix": true,
    "ruby": true,
    "scss": true,
    "toml": true,
    "vue": true,
    "xml": true,
  },

  "profiles": {
    "small": {
      "ui_font_size": 12,
      "buffer_font_size": 12,
      "agent_buffer_font_size": 12,
    },
    "medium": {
      "ui_font_size": 20,
      "buffer_font_size": 20,
      "agent_buffer_font_size": 20,
    },
    "large": {
      "ui_font_size": 24,
      "buffer_font_size": 24,
      "agent_buffer_font_size": 24,
    },
  },

  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"],
    },
  },
}
