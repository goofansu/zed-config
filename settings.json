{
  "ui_font_family": "Aporetic Serif",
  "ui_font_size": 18,
  "buffer_font_family": "Aporetic Sans Mono",
  "buffer_font_size": 16,
  "agent_ui_font_size": 18,

  "theme": {
    "mode": "system",
    "light": "Modus Operandi",
    "dark": "Modus Vivendi"
  },

  "terminal": {
    "font_family": "JetBrains Mono",
    "font_size": 16,
    "shell": {
      "program": "fish"
    }
  },

  "enable_language_server": false,

  "languages": {
    "Elixir": {
      "formatter": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      "format_on_save": "on"
    }
  },

  "agent": {
    "default_profile": "write",
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },

  "features": {
    "edit_prediction_provider": "none"
  },

  "auto_install_extensions": {
    "dockerfile": true,
    "elixir": true,
    "haml": true,
    "html": true,
    "make": true,
    "modus-themes": true,
    "nix": true,
    "ruby": true,
    "scss": true,
    "toml": true,
    "vue": true,
    "xml": true
  }
}
