{
  "ui_font_size": 16,
  "ui_font_family": "Aporetic Serif",
  "buffer_font_size": 16,
  "buffer_font_family": "Aporetic Sans Mono",

  "theme": {
    "mode": "system",
    "light": "Modus Operandi",
    "dark": "Modus Vivendi",
  },

  "terminal": {
    "font_family": "Aporetic Sans Mono",
    "shell": "system",
  },

  "disable_ai": true,
  "features": {
    "edit_prediction_provider": "none",
  },

  "auto_install_extensions": {
    "dockerfile": true,
    "elixir": true,
    "haml": true,
    "html": true,
    "make": true,
    "modus-themes": true,
    "nix": true,
    "ruby": true,
    "scss": true,
    "toml": true,
    "vue": true,
    "xml": true,
  },

  "profiles": {
    "small": {
      "ui_font_size": 12,
      "buffer_font_size": 12,
      "agent_buffer_font_size": 12,
    },
    "medium": {
      "ui_font_size": 20,
      "buffer_font_size": 20,
      "agent_buffer_font_size": 20,
    },
    "large": {
      "ui_font_size": 24,
      "buffer_font_size": 24,
      "agent_buffer_font_size": 24,
    },
  },

  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"],
    },
  },
}
